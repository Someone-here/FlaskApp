<div id="navbar">
    <div id = "Home">
        <a href = "{{ url_for('home')}}">Home</a>
    </div>
    <img  id = "logo" src = "{{ url_for('static', filename='logo.png') }}" width="100" height="100" alt = "logo">
    <div id="Gallery">
        <a href="{{ url_for('gallery')}}">Gallery</a>
    </div>
</div>
<style>
  @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@200&display=swap');
  #Home,
  #Gallery {
    display: inline-block;
    font-family: "Montserrat";
    font-size: 1.5rem;
    align-items: center;
  }

  #Home a,
  #Gallery a {
    transition: all 0.4s;
    text-decoration: none;
    color: black;
  }

  #Home a:hover,
  #Gallery a:hover {
    font-weight: bold;
  }

  #logo {
    width: 5.5rem;
    transition: all 0.5s;
    height: 5rem;
    margin-right: 2rem;
    margin-left: 2rem;
  }

  #navbar {
    z-index: 10;
    width: 100vw;
    position: fixed;
    padding-top: 1rem;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding-bottom: 2rem;
    display: flex;
    transition: all 0.5s;
    background: {{color}};
  }
  .nav-move {
    padding-bottom: 5px !important;
    padding-top: 5px ! important;
    background: white;
  }
  @media (max-width: 500px) {
    #logo {
      width: 4rem;
      height: 3.5rem;
      margin-left: 1.75rem;
      margin-right: 1.75rem;
    }
    #Home,
    #Gallery {
      font-size: 1rem;
    }
    #navbar {
      padding-bottom: 1rem;
    }
  }
</style>
<script src="{{ url_for('static', filename='javascript/header.js') }}"></script>